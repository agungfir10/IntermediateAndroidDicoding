<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_soccerball_x"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_soccerball" />

    <TextView
        android:id="@+id/tv_translation_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/translation_x"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@id/iv_soccerball_x"
        app:layout_constraintStart_toEndOf="@id/iv_soccerball_x"
        app:layout_constraintTop_toTopOf="@id/iv_soccerball_x" />

    <ImageView
        android:id="@+id/iv_soccerball_y"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toStartOf="@+id/tv_translation_y"
        app:layout_constraintTop_toTopOf="@+id/iv_soccerball_x"
        app:srcCompat="@drawable/ic_soccerball" />

    <TextView
        android:id="@+id/tv_translation_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/translation_y"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/iv_soccerball_y"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_soccerball_y" />

    <ImageView
        android:id="@+id/iv_soccerball_scale"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_soccerball_x"
        app:srcCompat="@drawable/ic_soccerball" />

    <TextView
        android:id="@+id/tv_scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/scale"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/iv_soccerball_scale"
        app:layout_constraintStart_toEndOf="@+id/iv_soccerball_scale"
        app:layout_constraintTop_toTopOf="@+id/iv_soccerball_scale" />

    <ImageView
        android:id="@+id/iv_soccerball_rotation"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_soccerball_scale"
        app:srcCompat="@drawable/ic_soccerball" />

    <TextView
        android:id="@+id/tv_rotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/rotation"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/iv_soccerball_rotation"
        app:layout_constraintStart_toEndOf="@+id/iv_soccerball_rotation"
        app:layout_constraintTop_toTopOf="@+id/iv_soccerball_rotation" />
</androidx.constraintlayout.widget.ConstraintLayout>