<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.agungfir.intermediateandroiddicoding">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LoginWithAnimation">

        <activity
            android:name=".motion_layout.MotionLayoutActivity"
            android:exported="true">

        </activity>
        <activity
            android:name="com.agungfir.animation.transition.DetailHeroActivity"
            android:exported="false"
            android:theme="@style/Theme.IntermediateAndroidDicoding" />
        <activity
            android:name="com.agungfir.animation.transition.HeroActivity"
            android:exported="true"
            android:theme="@style/Theme.IntermediateAndroidDicoding" />

        <activity
            android:name=".custom_view.ExerciseCanvasActivity"
            android:exported="true" />
        <activity
            android:name=".custom_view.CanvasActivity"
            android:exported="true" />
        <activity
            android:name=".animation.view.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>